<h4>{{ task.title }}</h4>
{% include 'molecule/task-action-bar.html.twig' with { task : task } only %}

<table class="table">
    <tr>
        <th>UUID</th>
        <td>{{ task.uuid }}</td>
    </tr>
    <tr>
        <th>Project</th>
        <td>
            {% if task.project is not null %}
                {% include 'atom/project-link.html.twig' with { project : task.project } only %}
            {% else %}
                [No project]
            {% endif %}
        </td>
    </tr>
    <tr>
        <th>Created</th>
        <td>{{ task.createdDate | whelmeddate }}</td>
    </tr>
    <tr>
        <th>Completed</th>
        <td>
            {% if(task.isCompleted) %}
                Completed on {{ task.completedDate | whelmeddate }}
            {% else %}
                Not yet completed
            {% endif %}
        </td>
    </tr>
</table>

