<h1
    {% if task.isCompleted %}class="task-completed"{% endif %}
    >
    {{ task.title }}
</h1>
{% include 'molecule/task-action-bar.html.twig' with { task : task } only %}

<table class="table">
    <tr>
        <th>UUID</th>
        <td>{{ task.uuid }}</td>
    </tr>
    <tr>
        <th>Project</th>
        <td>
            {% if task.project is not null %}
                {% include 'atom/project-link.html.twig' with { project : task.project } only %}
            {% else %}
                [No project]
            {% endif %}
        </td>
    </tr>
    <tr>
        <th>Created</th>
        <td>{{ task.createdDate | whelmeddate(true) }}</td>
    </tr>
    <tr>
        <th>Due date</th>
        <td>
            {% if task.dueDate is not null %}
                {{ task.dueDate | whelmeddate(true) }}
            {% else %}
                [No due date]
            {% endif %}
        </td>
    </tr>
    <tr>
        <th>Completed</th>
        <td>
            {% if(task.isCompleted) %}
                Completed on {{ task.completedDate | whelmeddate }}
            {% else %}
                Not yet completed
            {% endif %}
        </td>
    </tr>
</table>

