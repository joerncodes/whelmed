{% if app.user %}
<div class="col-2 button-nav">
    <div class="mt-3 ml-2">
        <h5><i class="mdi mdi-menu-down"></i>Perspectives</h5>
        <div class="btn-group-vertical">
            <a href="{{ path('task.all') }}" class="btn "><i class="mdi mdi-star"></i> All</a>
            <a href="{{ path('perspective.inbox') }}" class="btn "><i class="mdi mdi-inbox"></i> Inbox</a>
            <a href="{{ path('perspective.flagged') }}" class="btn "><i class="mdi mdi-flag-variant"></i> Flagged</a>
            <a href="{{ path('perspective.overdue') }}" class="btn "><i class="mdi mdi-alarm-check"></i> Overdue</a>
        </div>
    </div>
    <div class="mt-5 ml-2">
        <h5><i class="mdi mdi-menu-down"></i>Projects</h5>
        <div class="btn-group-vertical">
            {% for project in projectList.getProjects %}
                {% include 'atom/project-link.html.twig' with { project : project, class : 'btn' } %}
            {% endfor %}
        </div>
    </div>
</div>
{% endif %}
